# Database Configuration
DATABASE_PATH=./storage/database/database.db

# Authentication
JWT_SECRET=change-this-to-a-secure-random-string-in-production

# File Storage
ROOT_DIRECTORY=./storage/files
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=*

# Server Configuration
PORT=8080

# CORS Configuration
# Comma-separated list of allowed origins for Cross-Origin Resource Sharing
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Comma-separated list of allowed HTTP methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH

# Comma-separated list of allowed headers
CORS_HEADERS=Origin,Content-Type,Authorization,X-Requested-With

# Development Environment Example:
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# 
# Production Environment Example:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com